<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/roundbuttons">

            <ImageView
                android:id="@+id/imageViewHistory"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:padding="3dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textViewHistoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageViewHistory"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="VitÃ³ria"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewHistoryModeGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewHistoryTitle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageViewHistory"
                android:textSize="16dp"
                android:text="Single Player" />

            <TextView
                android:id="@+id/textViewHistoryScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewHistoryModeGame"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageViewHistory"
                android:background="@color/colorPrimary"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="20 Balls - 17 Balls"
                android:textStyle="bold" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>